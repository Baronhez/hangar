trigger:
  branches:
    include:
    - '*'

variables:
  language = '$language'
  targetPath = target

pool:
  vmImage: ubuntu-latest

steps:
- task: Bash@3
  displayName: "Build"
  inputs:
    filePath: '$(Build.Repository.LocalPath)/.pipelines/scripts/build.sh'

- publish: $(Build.Repository.LocalPath)/$(targetPath)/$(language)
  displayName: "Publish Artifact"
  artifact: target
  